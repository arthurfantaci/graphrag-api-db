{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Run: GraphRAG KG Pipeline CLI",
      "type": "debugpy",
      "request": "launch",
      "module": "graphrag_kg_pipeline.cli",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "envFile": "${workspaceFolder}/.env",
      "args": []
    },
    {
      "name": "Run: Pipeline CLI (Staging)",
      "type": "debugpy",
      "request": "launch",
      "module": "graphrag_kg_pipeline.cli",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "stagingpassword",
        "NEO4J_DATABASE": "neo4j"
      },
      "args": ["scrape", "--full"]
    },
    {
      "name": "Validate: Staging",
      "type": "debugpy",
      "request": "launch",
      "module": "graphrag_kg_pipeline.cli",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "stagingpassword",
        "NEO4J_DATABASE": "neo4j"
      },
      "args": ["validate"]
    },
    {
      "name": "Run: run.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests", "-v", "--tb=short"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug: Current File (Step Through)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}/src" },
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false
    }
  ]
}
